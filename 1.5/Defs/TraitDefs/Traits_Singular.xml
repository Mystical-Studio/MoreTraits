<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <TraitDef>
    <defName>OptimistPlus</defName>
    <label>optimist+</label>
    <commonality>0.5</commonality>
    <degreeDatas>
      <li>
        <label>optimist+</label>
        <description>{PAWN_nameDef} always feels a bit better about everything. However, their excessive optimism can rub others the wrong way .</description>
        <skillGains>
          <Social>-1</Social>
        </skillGains>
      </li>
    </degreeDatas>
  </TraitDef>

  <TraitDef>
    <defName>JackOfAllTrades</defName>
    <label>Jack of All Trades</label>
    <commonality>0.5</commonality>
    <degreeDatas>
      <li>
        <label>Jack of All Trades</label>
        <description>{PAWN_nameDef} is pretty good at everything, but not great at anything</description>
        <statFactors>
          <GlobalLearningFactor>0.5</GlobalLearningFactor>
        </statFactors>
        <skillGains>
          <Shooting>5</Shooting>
          <Melee>5</Melee>
          <Construction>5</Construction>
          <Mining>5</Mining>
          <Cooking>5</Cooking>
          <Plants>5</Plants>
          <Animals>5</Animals>
          <Crafting>5</Crafting>
          <Artistic>5</Artistic>
          <Medicine>5</Medicine>
          <Social>5</Social>
          <Intellectual>5</Intellectual>
        </skillGains>
      </li>
    </degreeDatas>
    <conflictingTraits>
      <li>TooSmart</li>
      <li>Brawler</li>
      <li>Wimp</li>
      <li>Pyromaniac</li>
    </conflictingTraits>
  </TraitDef>

  <TraitDef>
    <defName>BrutallyEfficient</defName>
    <label>Brutally Efficient</label>
    <commonality>0.5</commonality>
    <degreeDatas>
      <li>
        <label>Brutally Efficient</label>
        <description>{PAWN_nameDef} gets things done fast, but lacks finesse</description>
        <statFactors>
          <WorkSpeedGlobal>1.3</WorkSpeedGlobal>
          <ConstructSuccessChance>0.7</ConstructSuccessChance>
        </statFactors>
        <skillGains>
          <Artistic>-3</Artistic>
        </skillGains>
