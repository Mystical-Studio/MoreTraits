  </TraitDef>

  <TraitDef>
    <defName>ConspiracyTheorist</defName>
    <label>Conspiracy Theorist</label>
    <commonality>0.5</commonality>
    <degreeDatas>
      <li>
        <label>Conspiracy Theorist</label>
        <description>{PAWN_nameDef} trusts no one, not even you</description>
        <statFactors>
          <NegotiationAbility>-0.4</NegotiationAbility>
        </statFactors>
        <skillGains>
          <Social>-2</Social>
          <Intellectual>3</Intellectual>
        </skillGains>
      </li>
    </degreeDatas>
    <conflictingTraits>
      <li>Kind</li>
    </conflictingTraits>
